/*--------------------------------------------------------------------
*
* ICONS
*
--------------------------------------------------------------------*/

.icon
  display: inline-block
  top: 2px
  position: relative
  background-repeat: no-repeat
  background-size: contain
  opacity: .5

.icon-star,
.icon-tick,
.icon-watch,
.icon-x,
.icon-fork,
.icon-info
  height: 20px
  width: 20px
  margin-right: 5px

.icon-fork
  width: 15px
  background-image: url("../img/icon-fork.svg")
  
.icon-fork-sm
  width: 12px
  height: 14px
  background-image: url("../img/icon-fork.svg")
    
  
.icon-watch
  background-image: url("../img/icon-watch.svg")
  
.icon-watch-sm
  width: 14px
  height: 14px
  background-image: url("../img/icon-watch.svg")

.icon-star
  background-image: url("../img/icon-star.svg")
  
.icon-tick
  background-image: url("../img/icon-tick.svg")
  
.icon-x
  background-image: url("../img/icon-x.svg")

.icon-star-sm
  width: 14px
  height: 15px
  background-image: url("../img/icon-star.svg")

.icon-info
  top: 2px
  background-image: url("../img/icon-info.svg")

[class*="icon icon-hex"]
    height: 30px
    width: 30px
    display: block
    float: left
    margin-right: $ui-spacing-half
    opacity: 1

.icon-hex-1
  background-image: url("../img/icon-hex-1.svg")

.icon-hex-2
  background-image: url("../img/icon-hex-2.svg")

.icon-hex-3
  background-image: url("../img/icon-hex-3.svg")

.icon-hex-4
  background-image: url("../img/icon-hex-4.svg")

.icon-hex-5
  background-image: url("../img/icon-hex-5.svg")

.icon-hex-full
  background-image: url("../img/icon-hex-full.svg")

.icon-refresh-blue
  display: inline-block
  height: 15px
  width: 15px
  margin-right: 5px
  background-image: url("../img/icon-refresh-blue.svg")

